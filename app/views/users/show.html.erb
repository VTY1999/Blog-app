<section class="singleUser--section">
  <ul class="userProfile">
    <ul class="User">
      <li class="userImage">
        <img src=<%= @user.photo %> alt="UserImage"></li>
      <li class="userName"><%= @user.name %></li>
      <li class="userNumberOfposts">Post:<%= @user.posts_count %></li>
    </ul>
    <li class="bio">
      <h3 class="bioTit">Bio<h3>
      <p><%= @user.bio %><p>
    </li>
  </ul>

  <ul class="userPosts">
    <h1 class="recentPosts">Recent Posts</h1>
    <% @user.latest_three_post.each do |post| %>
      <%= link_to user_post_path(user_id: post.user_id, id: post.id) do %>
        <ul class="ul--post">
          <li class="li--post">
            <h4><%= post.title%></h4>
            <h4><%= post.text%></h4>
            <div class="comment--likes">
              <span>Comments: <%= post.comments_counter %></span>
              <span>Likes: <%= post.likes_counter %> </span>
            </div>
          </li>
        </ul>
      <% end %>
    <% end %>
    <%= link_to "See All Posts", user_posts_path(user_id: @user.id), class: "allPosts" %>
    <%= link_to "See all users", users_path, class: "allPosts" %>
    <%= link_to "Add a post", new_user_post_path(user_id: @user.id), class: "allPosts" %>
    </ul>
</section>
