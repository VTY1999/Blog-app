<section class="singleUser--section">
<ul class="userProfile">
<h1> <%= @user.name %> posts </h1>
    <ul class="User">
      <li class="userImage">
        <img src=<%= @user.photo %> alt="UserImage"></li>
      <li class="userName"><%= @user.name %></li>
      <li class="userNumberOfposts">Posts:<%= @user.posts_counter %></li>
    </ul>
  </ul>
</section>

<section class="singleUserPosts--section">
  <ul class="this">
    <% @posts.each do |post| %>
      <%= link_to user_post_path(user_id: post.user_id, id: post.id) do %>
        <li class="singlePost">
          <div class="singlePot">
            <h3><%= post.title %></h3>
            <p><%= post.text %></p>
            <div class="com--Lik--counter">
              <span>Comments: <%= post.comments_counter %></span>
              <span>Likes: <%= post.likes_counter %> </span>
            </div>
          </div>
          <div class="singleComment">
            <h4>Comments:</h4>
            <ul>
              <% post.recent_comments.each do |comment| %>
                <p><%= comment.user.name %>: <%= comment.text %></p>
              <% end %>
            </ul>
          </div>
        </li>
      <% end %>
    <% end %>
  </ul>
</section>
